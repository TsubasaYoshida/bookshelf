<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Url:</strong>
  <%= @book.URL %>
</p>

<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>

<% if DoneItem.exists?(user_id: current_user, book_id: @book) %>
  <p>読みました。</p>
<% else %>
  <%= form_with(model: DoneItem.new, local: true) do |form| %>
    <%= form.hidden_field :book_id, :value => @book.id %>
    <div class="actions">
      <%= form.submit '読んだ' %>
    </div>
  <% end %>
<% end %>
